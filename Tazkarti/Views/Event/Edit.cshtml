@model EventVM
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
    <div class="bg-white rounded-lg shadow-md p-4 cursor-pointer hover:shadow-lg">
        <h3 class="text-lg font-bold">Event Statistics</h3>
        <ul class="mt-4">
            <li>
                Total Events:should be replace with NUMBER OF EVENTS
                <span id="total-events"></span>
            </li>
        </ul>
    </div>
    <div class="bg-white rounded-lg shadow-md p-4 cursor-pointer hover:shadow-lg">
        <h3 class="text-lg font-bold">User Statistics</h3>
        <ul class="mt-4">
            <li>Total Bookings: should be replaced with number of user</li>
        </ul>
    </div>
</div>
<form id="event-form" asp-controller="Event" asp-action="Edit" enctype="multipart/form-data"
      class="max-w-md mt-6 mx-auto p-6 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center mb-4">Edit @Model.Name Event</h2>

    <!-- Event Name -->
    <div>
        <label for="event-name" class="block text-gray-700 font-bold mb-2">Event Name :</label>
        <input type="text"
               asp-for="Name"
               id="event-name"
               class="appearance-none block w-full bg-gray-200 border border-gray-200 rounded-lg px-3 py-2 placeholder-gray-400 focus:outline-none focus:bg-white focus:border-gray-300"
               required />
    </div>

    <!-- Event Place -->
    <div>
        <label for="event-place" class="block text-gray-700 font-bold mb-2">Event Place :</label>
        <input type="text"
               asp-for="place"
               id="event-place"
               class="appearance-none block w-full bg-gray-200 border border-gray-200 rounded-lg px-3 py-2 placeholder-gray-400 focus:outline-none focus:bg-white focus:border-gray-300"
               required />
    </div>

    <!-- Event Date -->
    <div>
        <label for="event-date" class="block text-gray-700 font-bold mb-2">Event Date :</label>
        <input type="date"
               asp-for="Time"
               id="event-date"
               class="appearance-none block w-full bg-gray-200 border border-gray-200 rounded-lg px-3 py-2 placeholder-gray-400 focus:outline-none focus:bg-white focus:border-gray-300"
               required />
    </div>

    <!-- Event Image -->
    <div>
        <label for="event-image" class="block text-gray-700 font-bold mb-2">Event Image :</label>
        <input type="file"
               asp-for="Image"
               id="event-image"
               class="appearance-none block w-full bg-gray-200 border border-gray-200 rounded-lg px-3 py-2 placeholder-gray-400 focus:outline-none focus:bg-white focus:border-gray-300"
               required />
    </div>

    <!-- Event Info -->
    <div>
        <label for="event-info" class="block text-gray-700 font-bold mb-2">Event Info :</label>
        <textarea asp-for="Info"
                  id="event-info"
                  class="appearance-none block w-full bg-gray-200 border border-gray-200 rounded-lg px-3 py-2 placeholder-gray-400 focus:outline-none focus:bg-white focus:border-gray-300"
                  rows="4"
                  required></textarea>
    </div>

    <!-- Event Price -->
    <div>
        <label for="event-price" class="block text-gray-700 font-bold mb-2">Event Price :</label>
        <input type="number"
               asp-for="Price"
               id="event-price"
               class="appearance-none block w-full bg-gray-200 border border-gray-200 rounded-lg px-3 py-2 placeholder-gray-400 focus:outline-none focus:bg-white focus:border-gray-300"
               required />
    </div>

    <!-- Number of Tickets -->
    <div>
        <label for="ticket-count" class="block text-gray-700 font-bold mb-2">Number of Tickets :</label>
        <input type="number"
               asp-for="NoOfTickets"
               id="ticket-count"
               class="appearance-none block w-full bg-gray-200 border border-gray-200 rounded-lg px-3 py-2 placeholder-gray-400 focus:outline-none focus:bg-white focus:border-gray-300"
               required />
    </div>

    <!-- Submit Button -->
    <div class="text-center mt-4">
        <button type="submit"
                class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
            Edit Event
        </button>
    </div>
</form>
