@model IEnumerable<EventVM>
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
    <div class="p-4">
        <h2 class="text-xl font-bold mb-4">Manage Even</h2>

        <!-- Button to Add Event -->
        <div class="mb-4">
            <a href="/events/create"
               class="bg-green-500 text-white px-4 py-2 rounded">
                Add Event
            </a>
        </div>

        <!-- Events Table -->
        <table class="min-w-full bg-white shadow-md rounded">
            <thead>
                <tr>
                    <th class="py-2 px-4 bg-gray-200">Event Name</th>
                    <th class="py-2 px-4 bg-gray-200">Event Place</th>
                    <th class="py-2 px-4 bg-gray-200">Event Date</th>
                    <th class="py-2 px-4 bg-gray-200">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="py-2 px-4">@item.Name</td>
                    <td class="py-2 px-4">@item.place</td>
                    <td class="py-2 px-4">@item.Time</td>
                    <td class="py-2 px-4 flex">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="bg-blue-500 text-white px-2 py-1 rounded mr-2">Edit</a>
                        <form asp-action="/events/delete/1" method="POST">
                            <button type="submit" class="bg-red-500 text-white px-2 py-1 rounded">Delete</button>
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
